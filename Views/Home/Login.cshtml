@model InPlace4.Models.__mLogin
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>InPlace</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png">
    <link href="~/Template/css/style.css" rel="stylesheet" />

</head>

<body class="h-100" style="background-image: url(../Template/images/inplace-login-logo.jpg);
        background-repeat: no-repeat;
        background-size: 100% 100%;">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content" style="background-color:snow;">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <img src="~/Template/images/Logo_Inplace.png" style="width:50%;" />
                                    </div>
                                    <h4 class="text-center mb-4 text-blue">Sign in your account</h4>
                                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <form action="index.html">
                                            <div class="form-group">
                                                <label class="mb-1 text-blue"><strong>Email</strong></label>
                                                @Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })
                                            </div>
                                            <div class="form-group">
                                                <label class="mb-1 text-blue"><strong>Password</strong></label>
                                                @Html.PasswordFor(a => a.UserPswd, new { @class = "form-control" })
                                            </div>
                                            <div class="text-center">
                                                <button type="submit" class="btn bg-blue-dark text-white btn-block">Login</button>
                                            </div>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/Template/vendor/global/global.min.js"></script>
    <script src="~/Template/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="~/Template/js/custom.min.js"></script>
    <script src="~/Template/js/dlabnav-init.js"></script>

</body>

</html>
